{
  "compilerOptions": {
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"]
    },
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5", 
    "lib": ["es2015", "dom"],
    "module": "esnext", 
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
